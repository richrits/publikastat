<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_publikasi_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/parent_layout">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:text="Judul Publikasi"
                android:paddingLeft="@dimen/publikasi_title_padding"
                android:paddingRight="@dimen/publikasi_title_padding"
                android:paddingTop="@dimen/publikasi_title_padding"
                android:textColor="@color/lbl_name"
                android:textSize="@dimen/publikasi_title" />

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/cardview_light_background"
                android:scaleType="fitXY"
                android:layout_margin="3dp"
                android:focusable="true"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
